<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_launcher"
    android:orientation="horizontal"
    android:divider="@drawable/drawable_divider"
    android:showDividers="middle"
    tools:context="com.ilifesmart.aurora.activity.LauncherActivity"
    android:background="@drawable/drawable_launcher_background"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="16dp"
            android:text="22\n17"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:id="@+id/setting"
            android:src="@drawable/settings"

            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:id="@+id/fragment_2"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:id="@+id/fragment_3"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:id="@+id/fragment_4"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:id="@+id/fragment_5"
        android:layout_height="match_parent"
        android:layout_weight="3"
        />

</LinearLayout>